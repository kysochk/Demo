<Page x:Class="Demo.Autorizacia"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Demo"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Autorizacia">

    <Grid>
        <WrapPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <GroupBox Height="200" Width="200" Header="Введите пароль">
                <StackPanel VerticalAlignment="Center">
                <TextBox x:Name="loginTxt" Width="auto" Height="25px" Margin=" 0 0 0 10"/>
                <Button x:Name="loginBtn" Content="Авторизироваться" Margin="5" Click="loginBtn_Click" />
                <Button x:Name="BackBtn" Content="Назад" Margin="5 0 5 0" Click="BackBtn_Click"/>
                </StackPanel>
            </GroupBox>
        </WrapPanel>
    </Grid>
</Page>
